<li class="List-item List-item--spaced ListTile ListTile--stacked">
  <div class="Grid">
    <div class="Grid-cell">
      <div class="Content-header">
        <h2 class="Content-heading u-inline"><a class="u-link-subtle" href="{{url}}">{{title}}</a></h2>
        <div class="Content-heading Content-meta u-inline">{{type}}</div>
      </div>
    </div>
    <div class="Grid-cell Tile-body Tile-body--stacked">
      {{#if embed}}
        {{#with embed}}
          <div class="u-v-xs {{#if float}}u-float-{{float}} u-margin-xs{{/if}}">
            {{> _embedThumbnail }}
          </div>
        {{/with}}
      {{/if}}
      {{#if blurb}}
        <div class="u-top-tight u-md-top-off">
          {{{markdown blurb}}}
        </div>
      {{/if}}
    </div>
  </div>
</li>

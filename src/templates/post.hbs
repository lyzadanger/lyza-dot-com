{{> _header }}
      <article class="Post u-margins-off u-sm-top-xs u-md-top-default">
        <div class="Grid">
          <div class="Grid-cell u-md-size2of12 Post-header">
            <header class="u-top-tight u-md-top-default">
              <div class="Post-meta Content-header">
                <h2 class="Content-heading Post-title">{{{title}}}</h2>
                <time class="Content-meta" datetime="{{datePublishedISO}}">{{formatDate datePublished}}</time>
              </div>
              <hr class="Separator--small Separator--light u-margins-off">
            </header>
          </div>
          <section class="Grid-cell u-md-size8of12 u-lg-size8of12">
            <div class="Post-content Content">
              {{#if thumbnail}}
                {{#with thumbnail}}
                  <div class="Thumbnail">
                    <div class="FlexEmbed">
                      <div class="FlexEmbed-ratio FlexEmbed-ratio--{{ratio}}">
                        <iframe class="FlexEmbed-content" src="{{url}}" frameborder="0" allowfullscreen></iframe>
                      </div>
                    </div>
                  </div>
                {{/with}}
              {{/if}}
              {{{content}}}
            </article>
          </div>
        </div>
      </article>
  </div>
{{> _footer }}
